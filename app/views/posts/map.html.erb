<div id="map" style="width:100%;height:400px;"></div>

<script>
var mapOptions = {
  scaleControl: false,
  logoControl: false,
  mapDataControl: false,
  zoomControl: true,
  zoomControlOptions: {
    position: N.Position.RIGHT_CENTER
  }
};
var map = new N.Map('map', mapOptions); // N = naver.maps 의 축약형
