map.setCenter(naver_address); // 중심 좌표 이동
map.setZoom(13);     // 줌 레벨 변경

var marker = new N.Marker({
    position: new N.LatLng(37.3595704, 127.105399),
    map: map
});

var contentString = [
    '<div class="iw_inner">',
    '   <h3>서울특별시청</h3>',
